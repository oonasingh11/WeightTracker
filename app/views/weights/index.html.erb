<h1>Weight Tracker</h1>

<%= form_with url: weights_path, method: :post, remote: true do |f| %>
  <p>
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<ul>
  <% @weights.each do |weight| %>
    <li><%= weight.value %> lbs on <%= weight.date %></li>
  <% end %>
</ul>
